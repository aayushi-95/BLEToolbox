<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/menu_padding_size"
    android:paddingLeft="30dp"
    android:paddingRight="10dp"
    android:background="@android:color/white"
    android:paddingTop="@dimen/menu_padding_size">

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="LED"
        android:textSize="@dimen/application_normal_text_size"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right" />
</RelativeLayout>
