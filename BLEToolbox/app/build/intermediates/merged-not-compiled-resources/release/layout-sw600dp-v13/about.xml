<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/about_background"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/nxp_logo_tablet" />

    <TextView
        android:id="@+id/about_fsl_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:autoLink="all"
        android:padding="12dp"
        android:textSize="@dimen/application_normal_text_size"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/deep_orange"
        android:text="@string/about_link"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/deep_orange"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/about_info"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:text="Build Version:\n1.0.0"
        android:textColor="@color/red"
        android:textSize="@dimen/application_normal_text_size" />
</LinearLayout>