<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/about_background"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:src="@drawable/nxp_logo_tablet" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/deep_orange"
        android:textSize="@dimen/application_normal_text_size" />

    <EditText
        android:id="@+id/edtEditShortcuts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/device_info_background"
        android:inputType="textNoSuggestions"
        android:padding="4dp"
        android:textSize="@dimen/application_normal_text_size"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvShortcuts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/device_info_background"
        android:inputType="textNoSuggestions"
        android:padding="4dp"
        android:textSize="@dimen/application_normal_text_size"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/deep_orange"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/application_normal_text_size" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="@dimen/application_normal_text_size" />
    </LinearLayout>

</LinearLayout>
