<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nxp_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proximity_rssi"
                    android:textColor="@color/red"
                    android:textSize="@dimen/proximity_label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/prox_tvRssi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/dashx3"
                    android:textColor="@color/deep_red"
                    android:textSize="@dimen/proximity_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proximity_unit"
                    android:textColor="@color/red"
                    android:textSize="@dimen/proximity_unit_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTxPower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proximity_tx_power"
                    android:textColor="@color/red"
                    android:textSize="@dimen/proximity_label_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/prox_tvTxPower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/dashx3"
                    android:textColor="@color/deep_red"
                    android:textSize="@dimen/proximity_value_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proximity_unit"
                    android:textColor="@color/red"
                    android:textSize="@dimen/proximity_unit_text_size"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/general_background"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/proximity_alert_level"
                android:textColor="@color/red"
                android:textSize="@dimen/proximity_label_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prox_tvAlerLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/high_alert_bg"
                android:gravity="center"
                android:text="@string/proximity_alert_level_high"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/proximity_label_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/prox_btAlertHigh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bt"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/proximity_alert_level_bt_high"
                    android:textSize="@dimen/proximity_alertLevel_value_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/prox_btAlertMild"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bt"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/proximity_alert_level_bt_mild"
                    android:textSize="@dimen/proximity_alertLevel_value_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/prox_btAlertOff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bt"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/proximity_alert_level_bt_off"
                    android:textSize="@dimen/proximity_alertLevel_value_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutImmediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/general_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/proximity_immediate_alert"
                android:textColor="@color/red"
                android:textSize="@dimen/proximity_label_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/prox_btAlertHighImmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bt"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/proximity_alert_level_bt_high"
                    android:textSize="@dimen/proximity_alertLevel_value_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/prox_btAlertMildImmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bt"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/proximity_alert_level_bt_mild"
                    android:textSize="@dimen/proximity_alertLevel_value_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/prox_btAlertOffImmed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_bt"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/proximity_alert_level_bt_off"
                    android:textSize="@dimen/proximity_alertLevel_value_text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/logo_bar" />

    <include layout="@layout/status_bar" />
</LinearLayout>