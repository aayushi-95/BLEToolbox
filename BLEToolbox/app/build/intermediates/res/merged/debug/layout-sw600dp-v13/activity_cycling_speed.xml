<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nxp_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Speed"
                android:textColor="@color/red"
                android:textSize="@dimen/cycling_normal_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/csc_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textAllCaps="true"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/cycling_big_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/csc_speed_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Km/h"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Cadence"
                android:textColor="@color/red"
                android:textSize="@dimen/cycling_normal_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/csc_cadence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textAllCaps="true"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/cycling_big_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/csc_cadence_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rpm"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Wheel Circumference"
            android:textColor="@color/red"
            android:textSize="@dimen/cycling_normal_text_size"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/csc_wheel_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="16dp"
                android:text="---"
                android:textAllCaps="true"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/cycling_big_text_size"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/csc_wheel_size_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@id/csc_wheel_size"
                android:background="@null"
                android:padding="8dp"
                android:src="@drawable/ic_wheel_settings_tablet" />
        </RelativeLayout>

        <TextView
            android:id="@+id/csc_wheel_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mm"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/heart_rate_sensor_location"
            android:textColor="@color/red"
            android:textSize="@dimen/cycling_normal_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/csc_sensor_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:inputType="textCapWords"
            android:textColor="@color/deep_red"
            android:textSize="@dimen/cycling_big_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/csc_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="#000"
        android:textSize="18sp" />

    <include layout="@layout/logo_bar" />

    <include layout="@layout/status_bar" />
</LinearLayout>