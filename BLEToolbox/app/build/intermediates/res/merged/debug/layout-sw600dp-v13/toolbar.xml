<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/deep_orange"
    android:minHeight="100dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
    app:titleTextAppearance="@style/Toolbar.TitleText">

    <Button
        android:id="@+id/bt_swMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bt_trans_without_corner"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="@string/uart_mode_uart"
        android:visibility="gone" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/toolbar_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|end|center"
        android:layout_margin="8dp"
        android:visibility="gone"
        wheel:matProg_barColor="#fff"
        wheel:matProg_barWidth="2dp"
        wheel:matProg_progressIndeterminate="true" />
</android.support.v7.widget.Toolbar>