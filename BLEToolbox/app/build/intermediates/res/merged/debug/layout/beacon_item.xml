<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/beacon_manufacture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/beacon_uuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/red"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/beacon_data_a"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/beacon_data_b"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/beacon_data_c"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/beacon_rssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/theme_text_secondary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/beacon_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>