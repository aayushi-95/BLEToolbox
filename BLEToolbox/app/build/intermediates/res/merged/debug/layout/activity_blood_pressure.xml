<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nxp_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/bp_padding_left"
            android:paddingRight="@dimen/bp_padding_right">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bpm_systolic"
                android:textColor="@color/red"
                android:textSize="@dimen/bpm_title_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_systolic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dashx3"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/bpm_value_textsize" />

            <TextView
                android:id="@+id/tv_unit_systolic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashx3"
                android:textColor="@color/red"
                android:textSize="@dimen/bpm_value_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/bp_padding_left"
            android:paddingRight="@dimen/bp_padding_right">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bpm_diastolic"
                android:textColor="@color/red"
                android:textSize="@dimen/bpm_title_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_diastolic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dashx3"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/bpm_value_textsize" />

            <TextView
                android:id="@+id/tv_unit_diastolic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashx3"
                android:textColor="@color/red"
                android:textSize="@dimen/bpm_value_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/bp_padding_left"
            android:paddingRight="@dimen/bp_padding_right">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bpm_mean_ap"
                android:textColor="@color/red"
                android:textSize="@dimen/bpm_title_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/dashx3"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/bpm_value_textsize" />

            <TextView
                android:id="@+id/tv_unit_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashx3"
                android:textColor="@color/red"
                android:textSize="@dimen/bpm_value_textsize" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/bp_padding_left"
        android:paddingRight="@dimen/bp_padding_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bpm_pulse_rate"
            android:textColor="@color/red"
            android:textSize="@dimen/bpm_title_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dashx3"
            android:textStyle="bold"
            android:textColor="@color/deep_red"
            android:textSize="@dimen/bpm_value_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bpm_bpm"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="@dimen/bpm_category_textsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/bpm_time_date"
            android:textColor="@color/red"
            android:textSize="@dimen/bpm_title_textsize"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/bp_padding_left"
            android:paddingRight="@dimen/bp_padding_right">

            <TextView
                android:id="@+id/tv_datetime_disconnected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dashx3"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/bpm_time_textsize" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="--:--:--"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/bpm_time_textsize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0000 - 00 - 00"
                android:textColor="@color/deep_red"
                android:textSize="@dimen/bpm_time_textsize"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <include layout="@layout/logo_bar" />

    <include layout="@layout/status_bar" />
</LinearLayout>