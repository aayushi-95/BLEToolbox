            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freescale.bletoolbox.activity.RSCActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freescale.bletoolbox.activity.HealthThermometerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freescale.bletoolbox.activity.BloodPressureActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.freescale.bletoolbox.activity.ProximityActivity"
            android:label="@string/app_name"
