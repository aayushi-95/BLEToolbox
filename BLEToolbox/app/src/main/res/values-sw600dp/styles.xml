<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorAccent">@color/theme_primary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="md_dark_theme">false</item>

        <item name="android:actionMenuTextAppearance">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item>
    </style>
</resources>
